        <th>@Html.LabelFor(p => p.Translation)</th>
        <td>@Html.TextAreaFor(p => p.Translation)</td>
    </tr>
    <tr>
        <th>@Html.LabelFor(p => p.Status)</th>
        <td>@Html.DisplayFor(p => p.Status) @Html.HiddenFor(p => p.Status)</td>
    </tr>
    <tr>
        <th>@Html.LabelFor(p => p.LiveTranslation)</th>
        <td>@Html.DisplayFor(p => p.LiveTranslation) @Html.HiddenFor(p => p.LiveTranslation)</td>
