@model BLOBLocker.Code.ViewModels.WebApp.LoginViewModel
@{
    ViewBag.Title = @HttpContext.GetGlobalResourceObject(null, "PageTitle.SignIn");
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
{
    <table>
        <tr>
            <td>@Html.LabelFor(model => model.Alias)</td>
            <td>@Html.TextBoxFor(model => model.Alias)</td>
            <td>@Html.ValidationMessageFor(p => p.Alias)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Password)</td>
            <td>@Html.PasswordFor(model => model.Password)</td>
            <td>@Html.ValidationMessageFor(p => p.Password)</td>
        </tr>
        <tr>
            <td>@Html.AntiForgeryToken()</td>
            <td><button type="submit">@HttpContext.GetGlobalResourceObject(null, "Button.SignIn")</button></td>
        </tr>
    </table>
}