@model BLOBLocker.Code.ViewModels.WebApp.LoginViewModel
@{
    ViewBag.Title = @HttpContext.GetGlobalResourceObject(null, "PageTitle.SignIn");
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="small-3 column middle">
            @Html.LabelFor(model => model.Alias)
        </div>
        <div class="small-4 column">
            @Html.TextBoxFor(model => model.Alias, new { @placeholder="Display Name" })
        </div>
        <div class="column">
            @Html.ValidationMessageFor(p => p.Alias)
        </div>
    </div>
    <div class="row">
        <div class="small-3 column middle">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="small-4 column">
            @Html.PasswordFor(model => model.Password, new { @placeholder = "************" })
        </div>
        <div class="column">
            @Html.ValidationMessageFor(p => p.Password)
        </div>
    </div>
    <div class="row">
        <div class="small-3 column">
            @Html.AntiForgeryToken()
        </div>
        <div class="small-4 small-offset-4 column end">
            <button type="submit" class="button">@HttpContext.GetGlobalResourceObject(null, "Button.SignIn")</button>
        </div>
    </div>
}