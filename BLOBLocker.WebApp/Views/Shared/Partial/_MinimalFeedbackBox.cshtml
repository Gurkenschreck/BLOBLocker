<div id="FeedbackBox" style="display:none; position:fixed; bottom:0; right:0; height:50px; width:50px; background-color:#DDDDDD;border-left:1px groove black;border-top:1px groove black;">
    <div style="display:none; width:inherit; background-color:yellow; text-align:center;">
        Hello my friends. Feedback is real
    </div>
</div>
<script>
            $(function () {
                var minimized = true;

                $("#FeedbackBox").show();
                $("#FeedbackBox").click(function () {
                    var fb = $(this);
                    if (minimized) {
                        fb.animate({
                            height: '250px',
                            width: '300px'
                        });
                        fb.children("div").show(300);
                        minimized = false;
                    }
                    else {
                        fb.animate({
                            height: '50px',
                            width: '50px'
                        });
                        fb.children("div").hide(300);
                        minimized = true;
                    }
                });
            });
</script>