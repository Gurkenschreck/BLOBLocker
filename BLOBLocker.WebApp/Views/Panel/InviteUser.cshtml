@model BLOBLocker.Code.ViewModels.WebApp.InvitationViewModel
@{
    Layout = null;
}

@using(Html.BeginForm("InviteUser", "Panel", FormMethod.Post))
{
    <table border="1">
        <tr>
            <td colspan="2">@Html.ValidationSummary()</td>
        </tr>
        <tr>
            <th>@Html.LabelFor(p => p.InviteAlias)</th>
            <td>@Html.EditorFor(p => p.InviteAlias)</td>
        </tr>
        <tr>
            <th>@Html.LabelFor(p => p.ShowAll)</th>
            <td>@Html.CheckBoxFor(p => p.ShowAll, new { id="ShowAllCheckBox" })</td>
        </tr>
        <tr id="ShowSinceDateTimeField">
            <th>@Html.LabelFor(p => p.ShowSince)</th>
            <td>@Html.EditorFor(p => p.ShowSince) </td>
            <td>Examples:<br /> @DateTime.Now <br /> @DateTime.Now.AddDays(-2) <br /> @(new DateTime(2015, 2, 14, 13, 37, 42))</td>
        </tr>
        <tr>
            <td>@Html.AntiForgeryToken() @Html.HiddenFor(p => p.PoolUID)</td>
            <td><button type="submit" >Add</button></td>
        </tr>
    </table>
}
<script>
    $(function () {
        $("#ShowSinceDateTimeField").toggle();
        $("#ShowAllCheckBox").click(function () {
            $("#ShowSinceDateTimeField").toggle();

        });
    });
</script>