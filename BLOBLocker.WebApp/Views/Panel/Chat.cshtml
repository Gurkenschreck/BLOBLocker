@model BLOBLocker.Code.ViewModels.WebApp.ChatViewModel
@{
    Layout = null;   
}

<div style="width:60%;">
    @if (BLOBLocker.Code.Membership.PoolRightHelper.HasRight(Model.PoolShare, BLOBLocker.Code.Membership.PoolRight.WriteChat)) { 
        @Html.Partial("_SendMessage", Model.NewMessage)
    }

    @if(BLOBLocker.Code.Membership.PoolRightHelper.HasRight(Model.PoolShare, BLOBLocker.Code.Membership.PoolRight.ReadChat)) {
        @Html.Partial("_ChatMessages", Model.Messages)

        <div style="width:100%; text-align:center;">
            @Html.ActionLink("Load more messages...", "Pool", new { puid = Request.QueryString["puid"], smc = Model.NextAmountShowLastMessageCount })
        </div>
    }
</div>
