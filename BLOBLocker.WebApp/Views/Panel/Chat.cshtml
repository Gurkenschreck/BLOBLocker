@model BLOBLocker.Code.ViewModels.WebApp.ChatViewModel

@{
    ViewBag.Title = string.Format(HttpContext.GetGlobalResourceObject(null, "PageTitle.Chat").ToString(), Model.PoolTitle);
}

<div class="menu-centered">
    <ul class="menu">
        <li>
            <a href="@Request.RawUrl" class="hollow button">
                @string.Format(HttpContext.GetGlobalResourceObject(null, "Label.NavPoolChatTitle").ToString(), Model.PoolTitle)
            </a>
        </li>
        <li>
            @Html.ActionLink(HttpContext.GetGlobalResourceObject(null, "Button.Back").ToString(),
                "Pool", new { puid = Model.PUID }, new { @class = "button" })
        </li>
    </ul>
</div>


<div>
    @Html.Partial("_Chat", Model)
</div>
