@model BLOBLocker.WebApp.Models.MessageViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("SendMessage", "Panel", FormMethod.Post))
{
    <table style="width:100%;">
        <tr>
            <td>@Html.AntiForgeryToken()</td>
            <td>@Html.HiddenFor(p => p.PUID)</td>
        </tr>
        <tr>
            <td>@Html.TextAreaFor(p => p.MessageText, new { style = "width:100%;" })</td>
            <td><button type="submit" style="width:100%; height:100%;">Send</button></td>
        </tr>
    </table>
}
