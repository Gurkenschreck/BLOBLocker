@model BLOBLocker.Code.ViewModels.WebApp.PoolConfigModel
@{
    ViewBag.Title = "PoolConfig";
}

<h2>PoolConfig</h2>

<p>
    @Html.Partial("_EditTitleAndDescription", Model.TitleDescriptionViewModel)
</p>

<p>
    @Html.Action("AssignMemory")
</p>

<p>
    @if (BLOBLocker.Code.Membership.PoolRightHelper.HasRight(Model.PoolShare, BLOBLocker.Code.Membership.PoolRight.InviteUser)) { 
        @Html.Action("InviteUser")
    }
</p>

<p>
    @if(BLOBLocker.Code.Membership.PoolRightHelper.HasRight(Model.PoolShare, BLOBLocker.Code.Membership.PoolRight.AssignRights))
    {
        @Html.Partial("_EditDefaultRights", Model.RightsEditViewModel)
    }
</p>

<hr />
<p>@Html.ActionLink("Back", "Pool", new { puid = Request.QueryString["puid"] })</p>
