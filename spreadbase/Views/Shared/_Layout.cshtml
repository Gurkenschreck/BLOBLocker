@{
    List<SelectListItem> cultures = new List<SelectListItem>();
    cultures.Add(new SelectListItem{ Text = "English", Value = "en" });
    cultures.Add(new SelectListItem{ Text = "Deutsch", Value = "de" });
    cultures.Add(new SelectListItem{ Text = "Español", Value = "es" });
    cultures.Add(new SelectListItem{ Text = "Polszczyzna", Value = "pl" });
    
    SelectListItem selectedItem = cultures.Where(p => UICulture.Contains(p.Value)).FirstOrDefault();
    if(selectedItem != null)
    {
        selectedItem.Selected = true;
    }
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
    </head>
    <body>
        <noscript>
            <p>
                @SpreadBase.Resources.Global.NoScriptDisclaimer
            </p>
            <hr />
        </noscript>
        <p>
        @if(HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <span>@Html.ActionLink("Panel Overview", "Index", "Panel") - @HttpContext.Current.User.Identity.Name - @Html.ActionLink("logout", "SignOut", "Account")</span>
        }
        else{
            <span>@SpreadBase.Resources.Global.NotLoggedIn @Html.ActionLink(SpreadBase.Resources.Global.LoginText, "Login", "Account") - @Html.ActionLink(SpreadBase.Resources.Global.SignUpText, "SignUp", "Account")</span>
        }
        </p>
        <p><span style="float:right;" id="counter">
            @using (Html.BeginForm("SetSessionCulture", "Globalization", FormMethod.Get))
            {
                @Html.DropDownList("culture", cultures)
                <input type="submit" value="Ok" />
            }
            </span>
        </p>

        <div id="main">
            @RenderBody()
        </div>

        @RenderSection("scripts", required: false)
    </body>
</html>
