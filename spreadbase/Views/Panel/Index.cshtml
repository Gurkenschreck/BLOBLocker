@model SpreadBase.Models.Account

@{
    ViewBag.Title = "Control Panel";
}

<h2>Control Panel</h2>


Add a new contact
<p>
    @using (Html.BeginForm("AddContact", "Panel", FormMethod.Post))
    {
        Html.ValidationSummary();
        
        @:Alias: @Html.TextBox("addAlias")
        @Html.AntiForgeryToken()
        <input type="submit" value="Add" />
    }
</p>
Share all your contacts
<p>
    @using (Html.BeginForm("ShareContacts", "Panel", FormMethod.Post))
    {
        Html.ValidationSummary();
        @:Share with: @Html.TextBox("shareWithAlias")
        @Html.AntiForgeryToken()
        <input type="submit" value="Add" />
    }
</p>

All your contacts
<p>
    @Html.Partial("~/Views/Panel/ContactList.cshtml", Model)
</p>
<hr />
Notifications
<p>
    <table>
        @foreach(SpreadBase.Models.Notification not in Model.Addition.Notifications)
        {
        <tr>
            <td>@not.Description</td>
            <td>@not.CreatedOn</td>
            <td><button value="@not.ID">X</button></td>
        </tr>
        }
    </table>
</p>