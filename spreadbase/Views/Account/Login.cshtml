@model SpreadBase.Models.Account
@{
    ViewBag.Title = SpreadBase.Resources.Account.Strings.PageLoginTitle;
}

<h2>SignIn</h2>

@using(Html.BeginForm())
{
    <p>
        @Html.ValidationSummary()
    </p>
    <p>
        @Html.LabelFor(model => model.Alias) *:
        @Html.TextBoxFor(model => model.Alias)
    </p>
    <p>
        @Html.LabelFor(model => model.Password) *:
        @Html.PasswordFor(model => model.Password)
    </p>
    @Html.AntiForgeryToken()
    <input type="submit" value="@SpreadBase.Resources.Account.Strings.btn_SignIn" />
}