@{
    List<SelectListItem> cultures = new List<SelectListItem>();
    cultures.Add(new SelectListItem{ Text = "English", Value = "en" });
    cultures.Add(new SelectListItem{ Text = "Deutsch", Value = "de" });
    cultures.Add(new SelectListItem{ Text = "Español", Value = "es" });
    cultures.Add(new SelectListItem{ Text = "Polski", Value = "pl" });
    
    SelectListItem selectedItem = cultures.Where(p => UICulture.Contains(p.Value)).FirstOrDefault();
    if(selectedItem != null)
    {
        selectedItem.Selected = true;
    }
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title - CRYPTOPOOL</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
    </head>

    <body>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("CRYPTOPOOL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>
            </div>
        </div>
        <noscript>
            <p>
                @CryptoPool.WebApp.Resources.Global.NoScriptDisclaimer
            </p>
            <hr />
        </noscript>
        <p>
        @if(HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <span>@Html.ActionLink("Panel Overview", "Index", "Panel") - @HttpContext.Current.User.Identity.Name - @Html.ActionLink("logout", "SignOut", "Account")</span>
        }
        else{
            <span>@CryptoPool.WebApp.Resources.Global.NotLoggedIn @Html.ActionLink(CryptoPool.WebApp.Resources.Global.LoginText, "Login", "Account") 
            - @Html.ActionLink(CryptoPool.WebApp.Resources.Global.SignUpText, "SignUp", "Account")</span>
        }
        </p>
        <p><span style="float:right;" id="counter">
            @using (Html.BeginForm("SetSessionCulture", "Globalization", FormMethod.Get))
            {
                @Html.DropDownList("culture", cultures)
                <input type="submit" value="Ok" />
            }
            </span>
        </p>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - CRYPTOPOOL</p>
            </footer>
        </div>

        @RenderSection("scripts", required: false)
    </body>
</html>
